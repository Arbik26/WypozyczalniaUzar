@rendermode InteractiveServer

@page "/login"
@inject AuthenticationService AuthService
@inject NavigationManager Navigation

<PageTitle>Logowanie - Wypożyczalnia Filmów</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <h1>Zaloguj się</h1>
        <p class="subtitle">Wejdź na swoje konto w Wypożyczalni Filmów</p>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-@(isSuccess ? "success" : "error")">
                @message
            </div>
        }

        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin" FormName="LoginForm">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="login">Login *</label>
                <InputText id="login" class="form-control" @bind-Value="loginModel.Login" placeholder="Wpisz login" />
                <ValidationMessage For="@(() => loginModel.Login)" />
            </div>

            <div class="form-group">
                <label for="password">Hasło *</label>
                <InputText id="password" class="form-control" type="password" @bind-Value="loginModel.Password" placeholder="Wpisz hasło" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <button type="submit" class="btn btn-primary btn-full-width" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Logowanie...</span>
                }
                else
                {
                    <span>Zaloguj się</span>
                }
            </button>
        </EditForm>

        <div class="auth-footer">
            <p>Nie masz konta? <a href="/register">Zarejestruj się tutaj</a></p>
            
            <!-- ✅ Przycisk powrotu na Home -->
            <div style="margin-top: 20px; border-top: 1px solid #ddd; padding-top: 20px;">
                <a href="/" class="btn-back">← Powrót na stronę główną</a>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string message = "";
    private bool isSuccess = false;
    private bool isLoading = false;

    private class LoginModel
    {
        public string Login { get; set; } = "";
        public string Password { get; set; } = "";
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        try
        {
            if (string.IsNullOrEmpty(loginModel?.Login))
            {
                message = "Login nie może być pusty!";
                isSuccess = false;
                return;
            }

            if (string.IsNullOrEmpty(loginModel?.Password))
            {
                message = "Hasło nie może być puste!";
                isSuccess = false;
                return;
            }

            var (success, client, msg) = await AuthService.LoginAsync(
                loginModel.Login,
                loginModel.Password ?? ""
            );

            if (success)
            {
                message = $"✅ Logowanie pomyślne! Cześć {client?.FirstName}!";
                isSuccess = true;
                await Task.Delay(1500);
                Navigation.NavigateTo("/dashboard", forceLoad: true);
            }
            else
            {
                message = msg ?? "❌ Błąd logowania";
                isSuccess = false;
            }
        }
        catch (Exception ex)
        {
            message = $"❌ Błąd: {ex.Message}";
            isSuccess = false;
            Console.WriteLine($"Błąd logowania: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }
}

